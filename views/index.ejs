<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My_Shop - Home</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            color: #333;
        }

        /* Navbar */
        nav {
            background-color: #1a2533;
            padding: 15px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            position: fixed;
            /* Fix navbar at the top */
            top: 0;
            left: 0;
            width: 96%;
            /* Make navbar full width */
            z-index: 1000;
            /* Ensure it stays above other content */
        }

        .logo {
            font-size: 32px;
            font-weight: bold;
            color: white;
        }

        .nav-links {
            list-style: none;
            display: flex;
        }

        .nav-links li {
            margin: 0 15px;
        }

        .nav-links li a {
            color: white;
            text-decoration: none;
            font-size: 20px;
            font-weight: bold;
            transition: color 0.3s;
        }

        .nav-links li a:hover {
            color: #ff9900;
        }

        .auth-buttons {
            display: flex;
            align-items: center;
        }

        .auth-buttons a {
            margin-left: 10px;
            padding: 10px 15px;
            background-color: #ff9900;
            color: white;
            text-decoration: none;
            font-size: 16px;
            border-radius: 5px;
        }

        .profile-circle {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            overflow: hidden;
            border: 2px solid white;
            margin-left: 15px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .profile-circle img {
            width: 70px;
            height: 63px;
            border-radius: 50%;
            border: 2px solid #ccc;
            object-fit: cover;
        }


        .profile-circle:hover {
            transform: scale(1.1);
        }

        /* Hero Section */
        .hero {
            background: url('https://source.unsplash.com/1600x700/?shopping,ecommerce') no-repeat center center/cover;
            color: white;
            text-align: center;
            padding: 150px 20px;
        }

        .hero h1 {
            font-size: 55px;
        }

        .shop-now {
            padding: 15px 30px;
            background-color: #ff9900;
            color: white;
            text-decoration: none;
            font-size: 24px;
            font-weight: bold;
            border-radius: 10px;
        }

        .shop-now:hover {
            background-color: #e68a00;
        }

        /* Product Section */
        .products {
            max-width: 1200px;
            margin: 40px auto;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            padding: 0 20px;
        }

        .product-card {
            background: white;
            padding: 15px;
            border-radius: 8px;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .product-card img {
            width: 100%;
            height: 180px;
            object-fit: cover;
            border-radius: 8px;
        }

        .add-to-cart {
            display: inline-block;
            padding: 10px 15px;
            background-color: #ff9900;
            color: white;
            font-size: 16px;
            border-radius: 5px;
            text-decoration: none;
            border: none;
            cursor: pointer;
        }

        .add-to-cart:hover {
            background-color: #e68a00;
        }

        /* Footer */
        footer {
            text-align: center;
            padding: 30px;
            background-color: #1a2533;
            color: white;
            margin-top: 40px;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <nav>
        <div class="logo">My_Shop</div>
        <ul class="nav-links">
            <li><a href="/home">Home</a></li>
            <!-- Products link converted to AJAX -->
            <li><a href="/api/product/productMenagement" id="productsLink">Products</a></li>
            <!-- View Cart link converted to AJAX -->
            <li><a href="/api/cart/viewCart" id="viewCartLink">viewCart</a></li>
        </ul>
        <div class="auth-buttons">
            <% if (!user) { %>
                <a href="/api/user/register">Register</a>
                <a href="/api/user/login">Login</a>
                <% } %>
                    <% if (user) { %>
                        <div class="profile-circle">
                            <a href="/api/user/profile">
                                <img src="<%= user.profileImage ? user.profileImage : 'https://via.placeholder.com/40' %>"
                                    alt="Profile">
                            </a>
                        </div>
                        <% } %>
        </div>
    </nav>

    <!-- Hero Section -->
    <div class="hero">
        <h1>Welcome to My_Shop</h1>
        <p>Shop the best products at unbeatable prices!</p>
        <a href="/products" class="shop-now">Shop Now</a>
    </div>

    <!-- Product Section -->
    <div class="products">
        <% products.forEach(product=> { %>
            <div class="product-card">
                <img src="<%= product.image %>" alt="<%= product.name %>">
                <h3>
                    <%= product.name %>
                </h3>
                <p>Price: <%= product.price %>/-</p>
                <!-- Add to Cart Form (AJAX version) -->
                <form action="/api/cart/addCart" method="POST" class="add-to-cart-form">
                    <input type="hidden" name="productId" value="<%= product._id %>">
                    <button type="submit" class="add-to-cart">Add to Cart</button>
                </form>
            </div>
            <% }); %>
    </div>

    <!-- Footer -->
    <footer>
        <p>&copy;
            <script>document.write(new Date().getFullYear())</script> My_Shop. All rights reserved.
        </p>
    </footer>
    </div>
</body>
<!-- Product Menagement container -->
<button id="productManagementBtn"> Manage Products</button>
<div id="productManagementContainer"></div>
<!-- View Cart container -->
<button id="viewCartBtn">View Cart</button>
<div id="cartContainer"></div>

<!-- jQuery and AJAX Script with Simple Validation -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $("#productManagementLink").on("click", function (event) {
            event.preventDefault();

            $.ajax({
                url: "/api/product/productMenagement", // Your protected route
                type: "GET",
                dataType: "html",
                xhrFields: {
                    withCredentials: true // âœ… Ensures cookies (JWT) are sent
                },
                success: function (html) {
                    console.log("Page Loaded Successfully:", html);
                    $("#productManagementContainer").html(html);
                },
                error: function (err) {
                    console.log("Error:", err);

                    // Handle authentication and authorization errors
                    if (err.status === 401) {
                        alert("Unauthorized! You must log in first.");
                        window.location.href = '/api/user/login'; // Redirect to login page
                    } else if (err.status === 403) {
                        alert(err.responseJSON?.message || "Access Denied! You do not have permission to view this page.");
                    } else {
                        alert("Something went wrong. Please try again later.");
                    }
                }
            });
        });
    });

    // ----- View Cart Button AJAX -----
    $(document).ready(function () {
        $("#viewCartBtn").on("click", function (event) {
            event.preventDefault();
            $.ajax({
                url: "/api/cart/viewCart", // Ensure this matches your backend route
                type: "GET",
                dataType: "html", // Expect HTML response
                success: function (html) {
                    alert("Carts data loading...");
                    $("#cartContainer").html(html); // Insert cart data into the page
                },
                error: function (err) {
                    console.log("Error:", err.status);
                    alert("Something went wrong");
                }
            });
        });
    });

    // ----- Add to Cart Button AJAX with Simple Validation -----
    $(".add-to-cart-form").on("submit", function (event) {
        event.preventDefault(); // Prevent normal form submission

        let form = $(this);
        // Simple validation: check if productId exists
        let productId = form.find('input[name="productId"]').val();
        if (!productId) {
            alert("Product ID is missing!");
            return;
        }

        let formData = form.serialize(); // Serialize the hidden input (productId)

        $.ajax({
            url: form.attr("action"), // /api/cart/addCart
            type: "POST",
            data: formData,
            dataType: "json",
            success: function (response) {
                alert(response.message || "Added to cart successfully!");
                window.location.href = '/api/cart/viewCart';
            },
            error: function (xhr, status, error) {
                alert(xhr.responseJSON?.message || "Failed to add to cart. Try again.");
                console.error("Add to Cart AJAX error:", error);
            }
        });
    });
</script>


</html>